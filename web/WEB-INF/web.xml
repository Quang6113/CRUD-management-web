<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controllers.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadItemServlet</servlet-name>
        <servlet-class>controllers.LoadItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCategoriesServlet</servlet-name>
        <servlet-class>controllers.GetCategoriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditItemServlet</servlet-name>
        <servlet-class>controllers.EditItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFAQsServlet</servlet-name>
        <servlet-class>controllers.GetFAQsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateItemServlet</servlet-name>
        <servlet-class>controllers.UpdateItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetItemFAQServlet</servlet-name>
        <servlet-class>controllers.GetItemFAQServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadItemServlet</servlet-name>
        <url-pattern>/LoadItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCategoriesServlet</servlet-name>
        <url-pattern>/GetCategoriesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditItemServlet</servlet-name>
        <url-pattern>/EditItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFAQsServlet</servlet-name>
        <url-pattern>/GetFAQsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateItemServlet</servlet-name>
        <url-pattern>/UpdateItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetItemFAQServlet</servlet-name>
        <url-pattern>/GetItemFAQServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainServlet</welcome-file>
    </welcome-file-list>
</web-app>
